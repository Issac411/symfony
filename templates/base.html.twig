<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        {% endblock %}
    </head>
    <body>
        {% if(app.user != null)  %}
            <a href='{{ path("idee") }}'>Créer idée</a> | <a href='{{ path("ideeliste") }}'>Liste idées</a>| <a href='{{ path("user_logout") }}'>Partir</a> || salut {{ app.user.username}}
        {% if(is_granted('ROLE_ADMIN'))  %}
            <a href='{{ path("categorieAdd") }}'>Club privé des catégories</a>
        {% endif %}
        {% else %}
            <a href='{{ path("user_login") }}'>Se brancher</a> | <a href='{{ path("user_registration") }}'>S'inscrire</a>
        {% endif %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
